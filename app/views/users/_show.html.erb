<div class="flex justify-between">
  <div class=" basis-7/12 h-screen overflow-scroll">
    <div class="flex px-4 pt-1">
      <div class="flex items-center">
        <div class="flex justify-center items-center w-10 h-10 rounded-full hover:bg-gray-100 transition duration-200"
             data-controller="link"
             data-action="click->link#back">
          <div class="w-5">
            <svg viewBox="0 0 24 24" aria-hidden="true" class="r-4qtqp9 r-yyyyoo r-dnmrzs r-bnwqim r-1plcrui r-lrvibr r-z80fyv r-19wmn03" style="color: rgb(15, 20, 25);"><g><path d="M7.414 13l5.043 5.04-1.414 1.42L3.586 12l7.457-7.46 1.414 1.42L7.414 11H21v2H7.414z"></path></g></svg>
          </div>
        </div>
      </div>
      <div class="flex flex-col ml-8">
        <span class="text-xl font-bold">
          <%= user.name %>
        </span>
        <span class="text-gray-500">
          <%= user.posts.count %> posts
        </span>
      </div>
    </div>
    <div class="h-40 bg-blue-100"></div>
    <div class="px-4 pt-4 mb-4">
      <div class="h-16">
        <div class="relative bottom-20 flex justify-center items-center w-32 rounded-full bg-white p-1">
          <%= image_tag 'default_user_icon.png' %>
        </div>
      </div>

      <div class="flex flex-col">
        <span class="text-xl font-bold"><%= user.name %></span>
        <span class="text-sm text-gray-500">@<%= user.name %></span>
      </div>
    </div>

    <%= turbo_frame_tag :user_posts, src: user_posts_path(user.name) %>

  </div>
  <div class="flex justify-end basis-5/12 border-l border-gray-100">
    <div class="w-80">

    </div>
  </div>
</div>
