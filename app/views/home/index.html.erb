<div class="flex justify-between">
  <div class=" basis-7/12 h-screen overflow-scroll">
    <div class="flex justify-between h-14 border-b border-gray-100">
      <div class="basis-1/2 h-auto flex justify-center items-center hover:bg-gray-100 transition duration-200">
        <div class="px-2 h-14 flex justify-center items-center border-b-4 border-blue-500">
          <span class="font-bold">For you</span>
        </div>
      </div>
      <div class="basis-1/2 h-auto flex justify-center items-center hover:bg-gray-100 transition duration-200">
        <div class="px-2 h-14 flex justify-center items-center">
          <span class="font-bold">Following</span>
        </div>
      </div>
    </div>
    <%= turbo_frame_tag :post_form, src: new_post_path %>
    <%= turbo_frame_tag :posts do %>
      <% @posts.each do |post| %>
        <%= render 'posts/shared/post', post:, user_name: post.user.name %>
      <% end %>
    <% end %>
  </div>
  <div class="flex justify-start basis-5/12 border-l p-8 border-gray-100">
    <div class="w-80 h-fit rounded-xl bg-gray-50">
      <div class="px-4 py-3">
        <span class="font-bold text-xl">You might like</span>
      </div>
      <div class="py-1">
        <% @recommended_users.each do |recomonded_user| %>
          <div class="flex px-4 py-2">
            <div class="flex justify-center items-center w-10 mr-4">
              <%= link_to user_path(recomonded_user.name) do %>
                <%= image_tag 'default_user_icon.png', class: 'hover:brightness-95 transition duration-200' %>
              <% end %>
            </div>
            <div class="flex flex-col w-fit">
              <%= link_to user_path(recomonded_user.name) do %>
                <span class="text-lg font-bold hover:underline transition duration-200">
                  <%= recomonded_user.name %>
                </span>
              <% end %>
              <%= link_to user_path(recomonded_user.name)  do %>
              <span class="text-md text-gray-500">
                @<%= recomonded_user.name %>
              </span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
